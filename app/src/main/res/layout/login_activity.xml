<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_grey">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/logo_siangsa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/logo"
            android:layout_marginTop="@dimen/length_40"
            android:layout_marginBottom="@dimen/length_40"/>

        <TextView
            android:id="@+id/text_welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_welcome_login"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/length_10"
            android:layout_below="@id/logo_siangsa"/>

        <TextView
            android:id="@+id/text_welcome_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_welcome_login_details"
            android:layout_below="@id/text_welcome"
            android:layout_marginLeft="@dimen/length_10"
            android:layout_marginRight="@dimen/length_10"
            android:layout_marginBottom="@dimen/length_40"/>

        <EditText
            android:id="@+id/edt_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="email"
            android:drawableLeft="@drawable/ic_icon_email"
            android:layout_below="@+id/text_welcome_details"
            android:layout_marginLeft="@dimen/length_10"
            android:layout_marginRight="@dimen/length_10"
            android:layout_marginBottom="@dimen/length_10"
            android:inputType="textEmailAddress"/>

        <EditText
            android:id="@+id/edt_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="password"
            android:drawableLeft="@drawable/ic_icon_lock"
            android:layout_below="@id/edt_email"
            android:layout_marginLeft="@dimen/length_10"
            android:layout_marginRight="@dimen/length_10"
            android:layout_marginBottom="@dimen/length_30"
            android:inputType="textPassword"/>


        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/edt_password"
            android:layout_margin="@dimen/length_10"
            android:background="@layout/rounded"
            android:textColor="#FFFFFF"
            android:text="Masuk"/>

        <TextView
            android:id="@+id/txt_lupa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lupa kata sandi"
            android:layout_below="@id/btn_login"
            android:layout_marginRight="@dimen/length_10"
            android:layout_gravity="right"/>
    </LinearLayout>

</ScrollView>
